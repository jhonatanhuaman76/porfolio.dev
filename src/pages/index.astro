---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Formation from '../components/Formation.astro';
import Proyects from '../components/Proyects.astro';
import SocialPill from '../components/SocialPill.astro';
import LinkendInIcon from '../icons/LinkendIn.astro';
import GitHubIcon from '../icons/GitHub.astro';
import MailIcon from '../icons/Mail.astro';
import PencilIcon from '../icons/Pencil.astro';
import CodeIcon from '../icons/Code.astro';
---

<Layout
  title='Portfolio de Jhonatan - Desarrollador y programador web'
  description='Contrata a Jhonatan para crear tu aplicación web. Desarrollador y programador Web. Especializado en crear aplicaciones únicas.'
>
  <main class='px-4'>
    <SectionContainer class='py-44 pb-24'>
      <img
        class='rounded-full w-20 h-20 mb-4'
        src='/avatar.png'
        alt='jhonatan foto'
      />
      <h1
        class='text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10'
      >
        Hey, soy Jhonatan
        <a
          href='https://www.linkedin.com/in/jhonatan-huaman/'
          target='_blank'
          rel='noopener'
          class='flex items-center'
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class='text-xl lg:text-2xl text-wrap max-w-[700px]'>
        <span class='text-yellow-200/90'>Desarrollador Web Front-end.</span>
        <span class='text-red-200/90'>De Lima, Perú.</span>
        <span class='opacity-70'>Especializado en crear aplicaciones únicas.</span>
      </h2>

      <nav class='flex gap-4 mt-8 flex-wrap'>
        <SocialPill href='https://www.linkedin.com/in/jhonatan-huaman/'>
          <LinkendInIcon class='size-4 md:size-6' />
          LinkedIn
        </SocialPill>
        <SocialPill href='https://github.com/jhonatanhuaman76'>
          <GitHubIcon class='size-4 md:size-6' />
          GitHub
        </SocialPill>
        <SocialPill href='mailto:jhonatanhuaman76@gmail.com'>
          <MailIcon class='size-4 md:size-6' />
          jhonatanhuaman76@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id='formacion'>
      <h2 class='text-3xl font-semibold mb-6 flex gap-x-3 items-center'>
        <PencilIcon class='size-7' />
        Formación
      </h2>
      <Formation />
    </SectionContainer>

    <SectionContainer id='proyectos'>
      <h2 class='text-3xl font-semibold mb-6 flex gap-x-3 items-center'>
        <CodeIcon class='size-7' />
        Proyectos
      </h2>
      <Proyects />
    </SectionContainer>
  </main>
</Layout>
